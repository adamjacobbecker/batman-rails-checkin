%div{"data-showif" => "sidebarViewBy | matches \"date\""}
  .sidebar-date-user-toggle
    Checkins by Date
    \/
    %a{"data-event-click" => "switchViewByDateUser"} by User
  %ul.nav.nav-list.nav-list-bordered.day-list
    %li{"data-foreach-day" => "project.days", "data-addclass-active" => "dateId | matches day.date"}
      %a{"data-route" => "day.route"}
        %i.icon-chevron-right.view-icon
        %span.badge-wrapper
          %span.badge.badge-inverse{"data-bind" => "day.checkin_count"}
        %span{"data-bind" => "day.date_pretty"}

%div{"data-showif" => "sidebarViewBy | matches \"user\""}
  .sidebar-date-user-toggle
    %a{"data-event-click" => "switchViewByDateUser"} Checkins by Date
    \/
    by User
  %ul.nav.nav-list.nav-list-bordered.user-list
    %li{"data-foreach-user" => "project.users", "data-addclass-active" => "userId | equals user.id"}
      %a{"data-route" => "user.route"}
        %i.icon-chevron-right.view-icon
        %img{"data-bind-src" => "user.gravatar_url"}
        %span.email
          %span{"data-bind" => "user.name"}
          %i{"data-bind-class" => "user.status | append \" icon-circle\""}
        %span.checkin{"data-bind" => "user.latest_checkin.firstGetDone"}
        .clearfix
