.well.checkin
  .checkin-header
    %img.gravatar{"data-bind-src" => "checkin.user.gravatar_url | default user.gravatar_url"}
    %a.name{"data-route" => "", "data-bind" => "checkin.user.name | default user.name"}
    %span.time{"data-bind" => "checkin.created_at | momentFormatDateVerbose"}
    %a.delete{"data-showif" => "checkin.user_id | equals currentUser.user_id", "data-event-click" => "destroyCheckin"} Delete

  %p{"data-bind" => "checkin.body_html | checkinify | raw"}
