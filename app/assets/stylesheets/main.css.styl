@import 'nib'

html
  height 100%

body
  padding-top 60px

a
  cursor pointer

#main-row
  padding-top 45px

#main
  position relative

  .alert-overlay
    position absolute
    top -36px
    width 400px
    left 50%
    margin-left -200px
    z-index 1031

.navbar-fixed-top
  ul.nav.pull-right
    margin-right -10px

.new-project-li
  form
    margin 0

  input
    margin 5px 0

  .btn
    margin 0

.clearfix
  clear both

.sidebar-nav-fixed
  position fixed

  .above-sidebar
    h4
      position absolute
      top -38px

  li.active
    i.icon-circle
      text-shadow 0 -1px -1px #333

  i.icon-circle
    font-size 11px
    text-shadow 0 -1px -1px #ccc

    &.offline
      color red

    &.away
      color #EBDB00

    &.available
      color green

.project-settings-form
  button
    margin-right 7px

.new-collaborator-form
  h5
    margin-bottom 3px
  input
    margin 0
  button.btn
    margin 0
    padding 4px 16px

.row-fluid > .fixed-sidebar
  margin-left 340px
  position relative

p.no-checkins
  margin-left -10px

.post-checkin-button
  position absolute
  top -36px
  right 2px

.checkins
  margin 0 -20px

.checkin-wrapper
  width 47%
  padding 0 10px
  float left

  &:nth-child(odd)
    clear both

.checkin-header
  margin-bottom 13px

  a.name
    color #333
    font-weight bold
    margin-left 3px

  .time
    color #999

  .gravatar
    margin-top -4px
    width 26px
    height 26px
    border-radius(13px)

.recent-checkin
  ul.get-done
    li
      cursor pointer

.checkin
  h4
    font-size 14px
    margin 0

  ul
    margin 0 0 10px

  li
    list-style none

  .flag-R
    color red

  .flag-Y
    color #bfbf00

  .flag-G
    color green

  .delete
    color #666
    display none

  &:hover
    .delete
      display inline

ul.nav-list-bordered
  padding 0
  background-color #fff
  border-radius(6px)

  > li:first-child > a
    border-top-left-radius 6px
    border-top-right-radius 6px

  > li:last-child > a
    border-bottom-left-radius 6px
    border-bottom-right-radius 6px

  > li > a
    margin 0 0 -1px
    display block
    border 1px solid #e5e5e5
    padding 10px
    position relative

    .view-icon
      position absolute
      top 50%
      margin-top -6px
      right 4px
      color #444

    img
      float left
      margin-right 10px

    .checkin
      display block
      color #aaa

textarea#post_content
  width 100%
  box-sizing border-box